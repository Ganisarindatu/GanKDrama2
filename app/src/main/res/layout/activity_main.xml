<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latarcoklat2"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Rekomendasi Drama Korea"
        android:textColor="#453216"
        android:textSize="25sp"
        android:fontFamily="@font/tulisanestetik"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

                                                        <ImageButton
           android:id="@+id/btn_drama_comedy"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#7A6565"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/comedy" />

        <ImageButton
            android:id="@+id/btn_drama_fantasy"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#7A6565"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fantasy" />

        <ImageButton
            android:id="@+id/btn_drama_romance"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#7A6565"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/romance" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Gambar Untuk Melihat Daftar Drama"
        android:textStyle="italic"
        android:layout_marginBottom="32dp"/>
    <ImageButton
        android:id="@+id/menujuProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profilee"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Profile"
        android:textSize="20dp"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"/>

</LinearLayout>